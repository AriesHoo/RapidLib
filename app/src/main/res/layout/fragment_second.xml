<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".module.second.SecondActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_toast_bg"
        android:backgroundTint="@color/toast_common"
        android:text="正常"
        android:textColor="@android:color/white"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_toast_bg"
        android:backgroundTint="@color/toast_remind"
        android:text="提醒"
        android:textColor="@android:color/white"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_toast_bg"
        android:backgroundTint="@color/toast_fail"
        android:text="错误"
        android:textColor="@android:color/white"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_toast_bg"
        android:backgroundTint="@color/toast_success"
        android:text="成功"
        android:textColor="@android:color/white"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_toast_bg"
        android:backgroundTint="@color/toast_warn"
        android:text="警告"
        android:textColor="@android:color/white"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_toast_bg"
        android:backgroundTint="@color/switch_thumb_disabled_material_dark"
        android:text="系统样式"
        android:textColor="@android:color/white"/>

</LinearLayout>
