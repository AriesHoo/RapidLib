<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:banner_indicatorGravity="bottom|right"
        app:banner_placeholderDrawable="@drawable/shape_placeholder"
        app:banner_pointAutoPlayInterval="3000"
        app:banner_pointContainerBackground="@color/trans_white"
        app:banner_pointContainerLeftRightPadding="10dp"
        app:banner_pointDrawable="@drawable/selecter_point"
        app:banner_tipTextSize="12sp"
        app:banner_tipTextColor="@color/colorPrimary"
        app:banner_transitionEffect="depth"/>

</LinearLayout>